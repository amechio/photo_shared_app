<h1>新しくアカウントを作成</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
  <div class="field">
    <%= image_tag f.icon.url, class: "picture" if @user.icon && @user.icon.url %>
    <%= f.label :icon %>
    <%= f.file_field :icon, class: "select" %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, class: "input" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "input" %>
  </div>
  <div class="actions">
    <%= f.submit "Create my account", class: "btn" %>
  </div>
<% end %>
