<p id="notice"><%= notice %></p>


<p><%= image_tag @post.user.icon.url, class: "icon" if @post.user.icon && @post.user.icon.url %></p>
<p><%= @post.user.name %></p>
<p><%= image_tag @post.picture.url, class: "picture" if @post.picture && @post.picture.url %></p>
<p><%= @post.content %></p>

<% unless @post.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<% if @post.user_id == current_user.id %>
  <%= link_to '編集', edit_post_path(@post), data: { confirm: '本当に編集していいですか？' }, class: "option_btn" %>
  <%= link_to '削除', @post, method: :delete, data: { confirm: '本当に削除していいですか？' }, class: "option_btn" %>
<% end %>
<%= link_to 'ホームへ', posts_path, class: "back" %>
