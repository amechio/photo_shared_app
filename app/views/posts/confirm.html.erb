<h1>以下の内容で、投稿する。</h1>
<%= form_with(model: @post, url: posts_path, local: true) do |form| %>
  <%= image_tag @post.picture.url, class: "picture" if @post.picture && @post.picture.url %>
  <%= form.hidden_field :picture_cache %>
  <%= form.hidden_field :content, class:"sentence" %>
  <p><%= @post.content %></p>
  <%= form.submit "登録する", class: "btn" %>
<% end %>
<%= form_with(model:@post, url:new_post_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :picture_cache %>
  <%= form.hidden_field :content, class:"sentence" %>
  <%= form.submit "戻る", name: 'back', class: "option" %>
<% end %>
